<% layout('layouts/boilerplate')%>
<form novalidate class="validated-form" action="/history" method="POST" >
    <div class="row mt-3">
    <div class="col-md-6 mb-3">
        <div class="mb-3">
            <label class="form-label" for="vin">PREVIOUS SERVICES</label>
            <input class="form-control" type="number" id="no" name="no"
                value="" min=0 required>
                <div class="valid-feedback">
                    Looks good!
                </div>
        </div>
    </div>
    <div class="col-md-6 mb-3 mt-3">
   <div class=" text-start mt-3">
    <button class="btn btn-primary" type="submit" onMouseOver="hoverin()" id="b" onMouseOut="hoverout()">GO</button>
</div>
</div>
</div>  
</form>
<script>
    function hoverout(){
    var x = document.getElementById("b");
    x.style.textDecorationLine='none';
    }
    function hoverin(){
    var x = document.getElementById("b");
    x.style.textDecorationLine='underline';
    }
 </script>